    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const dropdownMenu = document.querySelector(".dropdown-menu");
            const subMenuItems = dropdownMenu.querySelectorAll(".nav-link.collapsed");

            dropdownMenu.addEventListener("click", function (event) {
                event.stopPropagation();
            });

            subMenuItems.forEach(function (item) {
                item.addEventListener("click", function (event) {
                    event.stopPropagation();
                });
            });

            document.addEventListener("click", function () {
                dropdownMenu.classList.remove("show");
            });
        });

        $("#siparisler").click(function () {
            var siparisElement = $("#collapseProduct");
            if (siparisElement.hasClass("show")) {
                siparisElement.removeClass("show");
            } else {
                siparisElement.addClass("show");
            }
        });
        $("#kullanici").click(function () {
            var element = $("#collapseDashboards");
            if (element.hasClass("show")) {
                element.removeClass("show");
            } else {
                element.addClass("show");
            }
        });

    </script>
