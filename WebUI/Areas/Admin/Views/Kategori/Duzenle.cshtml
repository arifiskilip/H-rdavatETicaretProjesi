@using WebUI.Areas.Admin.Models;
@model CategoryAddModel
@{
    TempData["Title"] = "Kategori Düzenle";
}
@if (!ViewBag.Success)
{
    <div class="m-5">
        <div class="alert alert-danger">Güncelleme yapmak istediğiniz ürün ne yazık ki bulunamadı.</div>
        <div class="alert alert-danger">@ViewBag.Message</div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-xl-12">
                <!-- Account details card-->
                <div class="card mb-4">
                    <a href="/Admin/Kategori">
                    <button class="btn btn-datatable btn-icon btn-transparent-dark mr-2">
                        <i class="fa-solid fa-arrow-left" title="Geri Dön" style="font-size:30px;"></i>
                    </button>
                </a>
                    <div class="card-header renk">Ürün Detayları</div>
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="Kategori" asp-action="Duzenle" method="post">
                            <!-- Form Row-->
                            <div class="form-row">
                                <input style="display:none" type="text" asp-for="Id">
                                <!-- Form Group (first name)-->
                                <div class="form-group col-md-6">
                                    <label class="small mb-1" for="inputFirstName">Kategori Adı</label>
                                    <input class="form-control" asp-for="Ad" id="inputFirstName" type="text" />
                                    <div class="text-danger" asp-validation-summary="All"></div>
                                </div>
                                <button class="btn btn-primary renkBtn" type="submit">Güncelle</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

