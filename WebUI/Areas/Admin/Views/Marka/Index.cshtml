@using Entities.Concrete;
@model IDataResult<List<Marka>>
@{
    TempData["Title"] = "Markalar";
    var counter = 0;
}
@if (TempData["Message"] != null)
{
    <div class="m-5">
        <div class="alert alert-success"> @TempData["Message"]</div>
    </div>
}



<div class="card m-5">
    <div class="card-body">
        <div id="confirmationModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmationModalLabel">İşlem Onayı</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Silmek istediğinizden emin misiniz?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                        <a id="deleteLink" href="#" class="btn btn-danger">Sil</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="datatable">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Numarası</th>
                        <th>Marka Adı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Succes)
                    {
                        if (Model.Data.Count > 0)
                        {
                            @foreach (var item in Model.Data)
                            {
                                <tr>
                                    <td>@(counter=counter+1)</td>
                                    <td>@item.Ad</td>
                                    <td>
                                        <a href="/Admin/Marka/Duzenle/@item.Id">
                                            <button class="btn btn-datatable btn-icon btn-transparent-dark mr-2"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                                        </a>
                                        <a href="#">
                                            <button class="btn btn-datatable btn-icon btn-transparent-dark delete-link" data-id="@item.Id"><i data-feather="trash-2"></i></button>
                                            </a>
                                        
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <a href="/Admin/Marka/Ekle"><button class="btn btn-outline-primary">Marka Ekle</button></a>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
    $(".delete-link").on("click", function (e) {
        e.preventDefault();
        var id = $(this).data("id");
        $("#deleteLink").attr("href", "/Admin/Marka/Sil/" + id);
        $("#confirmationModal").modal("show");
    });
});
</script>
