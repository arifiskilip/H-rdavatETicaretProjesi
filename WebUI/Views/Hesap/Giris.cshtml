@model LoginModel
@{
    TempData["Title"] = "Giriş Sayfası";
}
<div style="visibility:hidden">
    <div class="row">
        <h1>asd</h1>
    </div>
    <div class="row">
        <h1>asd</h1>
    </div>
</div>
<section style="margin-top: 200px;">
    <div class="container">
        <div class="row" style="justify-content: center; align-items: center; display: flex; flex-direction: column;">
            <div class="col-12 text-center">
                <h4 style="font-size: 80px; font-weight: 600!important; color: #189c97;">Giriş</h4>
            </div>
            <div class="card shadow" style="width: 40rem; border-radius: 50px; border-width: 3px; border-color: #189c97;">
                <div class="card-body">
                    <div class="row d-flex flex-column align-content-center mt-5 align-items-center">
                        <form class="align-content-center d-flex flex-column align-items-center" method="post" asp-controller="Hesap" asp-action="Giris">
                            <div class="form-group">
                                <label for="email">Telefon Numarası</label>
                                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="biga@gmail.com">
                          
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Şifre</label>
                                <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1" placeholder="********">
                             
                            </div>
                            <div class="text text-danger" asp-validation-summary="All">

                            </div>
                            <div class="form-check text-center">

                                <a href="/Hesap/Kaydol" style="text-decoration: none;">
                                    <p>Kayıt Ol</p>
                                </a>
                            </div>
                            <button type="submit" class="btn btn-primary renkBtn mt-3">Giriş</button>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



</section>