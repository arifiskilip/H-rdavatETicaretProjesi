    <script src="~/E-Ticaret/files/js/map.js"></script>
    <!--Tilt Js-->
    <!-- custom script-->
    <script src="~/E-Ticaret/files/js/countdown.js"></script>
    <script src="~/E-Ticaret/files/js/script.js"></script>
    <script src="~/E-Ticaret/vendor/js/bootstrap-input-spinner.js"></script>
    <script src="~/E-Ticaret/vendor/js/swiper.min.js"></script>
    <script src="~/E-Ticaret/files/js/nouislider.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>