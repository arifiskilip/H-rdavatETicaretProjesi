    <script src="~/E-Ticaret/vendor/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/E-Ticaret/vendor/js/jquery.themepunch.revolution.min.js"></script>
    <script src="~/E-Ticaret/vendor/js/jquery.cubeportfolio.min.js"></script>
