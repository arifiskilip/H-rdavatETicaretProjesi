@using System.Security.Claims;
<!DOCTYPE html>
<html lang="tr">

<head>
    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
    <!-- Page Title -->
    <title>@TempData["Title"]</title>
    <link rel="icon" href="~/E-Ticaret/images/sitelogo.png" type="image/x-icon" />
    <!-- Favicon -->
    <!-- Bundle -->
    <link href="~/E-Ticaret/vendor/css/bundle.min.css" rel="stylesheet">
    <!-- Plugin Css -->
    <link href="~/E-Ticaret/files/css/line-awesome.min.css" rel="stylesheet">
    <link href="~/E-Ticaret/vendor/css/revolution-settings.min.css" rel="stylesheet">
    <link href="~/E-Ticaret/vendor/css/jquery.fancybox.min.css" rel="stylesheet">
    <link href="~/E-Ticaret/vendor/css/owl.carousel.min.css" rel="stylesheet">
    <link href="~/E-Ticaret/vendor/css/cubeportfolio.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/E-Ticaret/vendor/css/LineIcons.min.css">
    <link href="~/E-Ticaret/vendor/css/swiper.min.css" rel="stylesheet">
    <link href="~/E-Ticaret/files/css/nouislider.min.css" rel="stylesheet">
    <link href="~/E-Ticaret/files/css/range-slider.css" rel="stylesheet">
    <link href="~/E-Ticaret/vendor/css/wow.css" rel="stylesheet">
    <link href="~/E-Ticaret/files/css/settings.css" rel="stylesheet">
    <link href="~/E-Ticaret/files/css/blog.css" rel="stylesheet">
    <link href="~/E-Ticaret/files/css/style.css" rel="stylesheet">
</head>

<body data-spy="scroll" data-target=".navbar" data-offset="90">


    <div class="preloader">
        <div class="centrize full-width">
            <div class="vertical-center">
                <div class="spinner">
                    <div class="double-bounce1"></div>
                    <div class="double-bounce2"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Preloader End -->
    <!--Header Start-->

    <header id="header">
        <div class="upper-nav">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-6 mt-auto mb-auto">
                        <ul class="d-flex mb-0 top-info">
                            <li class="c-links d-none d-lg-block">
                                <span><i class="lab la-whatsapp"></i></span><a href="#">0850 242 25 00</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-12 col-lg-6 mt-auto mb-auto d-lg-flex justify-content-center justify-content-lg-end">
                        <ul class="shop-details d-flex">
                            <li>
                                <a href="javascript:void(0)" class="open_search"><i class="las la-search"></i></a>
                            </li>
                            <li>
                                <a href="javascript:void(0)" id="open-shop-card"><i class="las la-shopping-bag"></i></a>
                            </li>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <a href="/Hesap/Giris" id="open-profile"><i class="las la-user"></i></a>
                                </li>
                            }

                        </ul>
                    </div>
                    <div class="col-12 d-flex justify-content-center align-items-center">
                        <a class="navbar-brand" href="/AnaSayfa"><img src="~/E-Ticaret/images/ethemlogo.png" style="width:500px; height:200px;"></a>
                    </div>
                </div>
            </div>
        </div>
        <!--Navigation-->
        <nav class="navbar navbar-top-default navbar-expand-lg navbar-simple nav-line">
            <div class="container">
                <div class="row no-gutters w-100">
                    <div class="col-6 col-lg-3 offset-3 offset-lg-0">
                        <a href="/AnaSayfa" title="Logo" class="logo fixed-nav-items">
                            <!--Logo Default-->
                            <img src="~/E-Ticaret/images/ethemlogo.png"  alt="logo" class="logo-dark">
                        </a>
                    </div>
                    <!--Side Menu Button-->
                    <div class="col-3 d-flex justify-content-end align-items-center">

                        <ul class="shop-details fixed-nav-items">
                            <li>
                                <a href="javascript:void(0)" class="open_search"><i class="las la-search"></i></a>
                            </li>
                            <li>
                                <a href="javascript:void(0)" id="open-shop-card1">
                                    <i class="las la-shopping-bag"></i>
                                </a>
                            </li>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <a href="/Hesap/Giris" id="open-profile"><i class="las la-user"></i></a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <svg id="header-svg" xmlns="http://www.w3.org/2000/svg" version="1.1" width="100%" height="60"
             viewBox="0 0 100 100" preserveAspectRatio="none">
            <path d="M0 100 C40 0 60 0 100 100 Z" />
        </svg>
        <a href="javascript:void(0)" class="sidemenu_btn" id="sidemenu_toggle">
            <span></span>
            <span></span>
            <span></span>
        </a>
    </header>

    <!--Side Nav-->
    <div class="side-menu hidden">
        <div class="inner-wrapper">
            <span class="btn-close" id="btn_sideNavClose"><i></i><i></i></span>
            <nav class="side-nav w-100">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/AnaSayfa/Index">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Urun">Ürünler</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown1" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            İşlemler <i class="fas fa-angle-down"></i>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                           @if (User.Identity.IsAuthenticated)
                            {
                                @if ((User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Role).Value) == "Admin")
                                {
                                    <a class="dropdown-item" href="/Admin/Siparis">
                                        <i class="las la-angle-double-right"></i>Sipariş Takibi
                                    </a>
                                }
                                else
                                {
                                    <a class="dropdown-item" href="/Member/Siparis">
                                        <i class="las la-angle-double-right"></i>Sipariş Takibi
                                    </a>
                                }
                            }
                            else
                            {
                               
                                    <a class="dropdown-item" href="/Member/Siparis">
                                        <i class="las la-angle-double-right"></i>Sipariş Takibi
                                    </a>
                                
                            }

                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Iletisim">İletişim</a>
                    </li>
                </ul>
            </nav>

            <div class="side-footer w-100">
                <ul class="social-icons-simple">
                    <li>
                        <a class="facebook-text-hvr" href="javascript:void(0)"><i class="fab fa-facebook-f"></i> </a>
                    </li>
                    <li>
                        <a class="instagram-text-hvr" href="javascript:void(0)"><i class="fab fa-instagram"></i> </a>
                    </li>
                    <li><a class="twitter-text-hvr" href="javascript:void(0)"><i class="fab fa-twitter"></i> </a> </li>
                </ul>
                <p class="text-dark">&copy;2023 Ethem Hırdavat</p>

            </div>
        </div>
    </div>
    <a id="close_side_menu" href="javascript:void(0);"></a>

    <section>
        <div id="confirmationModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmationModalLabel">İşlem Onayı</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Silmek istediğinizden emin misiniz?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                        <a id="deleteCart" href="#" class="btn btn-danger">Sil</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End side menu -->
    <!--Header End-->
    <!--Home Start-->
    <!--testimonial sec end-->
    @RenderBody()
    <!--Footer Start-->
    <footer class="footer-style-1">
        <div class="container">
            <div class="row align-items-center">
                <!--Social-->
                <!--Text-->
                <div class="col-lg-12 text-center">
                    <p class="company-about fadeIn">© 2023 Ethem Hırdavat</p>
                    <p class="company-about fadeIn">Created By | Arif İSKİLİP</p>
                </div>
            </div>
        </div>
    </footer>
    <!--Footer End-->
    <!--Scroll Top Start-->
    <span class="scroll-top-arrow"><i class="fas fa-angle-up"></i></span>
    <!--Scroll Top End-->
    <!--Shop card window Start-->
    @await Component.InvokeAsync("_BasketPartial")
    <!--Shop card window  End-->
    <!--Search modal window start-->
    @await Component.InvokeAsync("_SearchBoxPartial");
    <!--Search modal window end-->
